@inherits LayoutComponentBase
@using ModernBillingApp.Services
@inject SessionService SessionService
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="d-flex align-items-center justify-content-between w-100">
                <div class="d-flex align-items-center">
                    <span class="text-muted me-3">
                        <span class="oi oi-clock me-1"></span>
                        @DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                    </span>
                </div>
                <div class="d-flex align-items-center">
                    @if (SessionService.IsAuthenticated && SessionService.CurrentUser != null)
                    {
                        <div class="dropdown me-3">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown">
                                <span class="oi oi-person me-1"></span>
                                @SessionService.CurrentUser.Username
                                @if (SessionService.IsAdmin)
                                {
                                    <span class="badge bg-primary ms-1">Admin</span>
                                }
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><span class="oi oi-cog me-2"></span>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" @onclick="HandleLogout"><span class="oi oi-account-logout me-2"></span>Logout</a></li>
                            </ul>
                        </div>
                    }
                    <button class="btn btn-sm btn-outline-secondary" @onclick="HandleLogout" title="Logout">
                        <span class="oi oi-account-logout"></span>
                    </button>
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<ToastNotification @ref="toastNotification" />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private Components.ToastNotification? toastNotification;

    protected override void OnInitialized()
    {
        // Redirect to login if not authenticated
        if (!SessionService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        SessionService.OnAuthenticationChanged += StateHasChanged;
    }

    private void HandleLogout()
    {
        SessionService.OnAuthenticationChanged -= StateHasChanged; // prevent loop
        SessionService.ClearUser();

        // navigate only AFTER state is stable
        Task.Delay(100).ContinueWith(_ =>
        {
            InvokeAsync(() => NavigationManager.NavigateTo("/login", true));
        });
    }


    public void Dispose()
    {
        SessionService.OnAuthenticationChanged -= StateHasChanged;
    }
}
