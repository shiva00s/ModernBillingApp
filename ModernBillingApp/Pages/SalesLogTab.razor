@* This component displays the Sales Log details *@

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Date</th>
            <th>Bill #</th>
            <th>Product</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Total</th>
            <th>GST Amt</th>
        </tr>
    </thead>
    <tbody>
        @if (SalesLog == null || !SalesLog.Any())
        {
            <tr><td colspan="7">No sales data found for this period.</td></tr>
        }
        else
        {
            @foreach (var item in SalesLog)
            {
                <tr>
                    <td>@item.Bill.BDate.ToShortDateString()</td>
                    <td>@item.Bill.BillNo</td>
                    <td>@item.PName</td>
                    <td>@item.PQty</td>
                    <td>@item.SPrice.ToString("0.00")</td>
                    <td>@item.Total.ToString("0.00")</td>
                    <td>@item.GstAmount.ToString("0.00")</td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    [CascadingParameter]
    public List<BillItem> SalesLog { get; set; }
}