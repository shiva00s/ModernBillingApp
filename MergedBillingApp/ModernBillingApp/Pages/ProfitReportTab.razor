@* This component displays the Profit Report details *@

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Date</th>
            <th>Bill #</th>
            <th>Product</th>
            <th>Qty</th>
            <th>S.Price</th>
            <th>P.Price</th>
            <th>Profit</th>
        </tr>
    </thead>
    <tbody>
        @if (ProfitReport == null || !ProfitReport.Any())
        {
            <tr><td colspan="7">No profit data found for this period.</td></tr>
        }
        else
        {
            @foreach (var item in ProfitReport)
            {
                <tr>
                    <td>@item.BDate.ToShortDateString()</td>
                    <td>@item.BillNo</td>
                    <td>@item.PName</td>
                    <td>@item.PQty</td>
                    <td>@item.SPrice.ToString("0.00")</td>
                    <td>@item.PPrice.ToString("0.00")</td>
                    <td>@item.Profit.ToString("0.00")</td>
                </tr>
            }
            <tr class="table-info">
                <td colspan="6" class="text-end fw-bold">Total Profit:</td>
                <td class="fw-bold">@ProfitReport.Sum(item => item.Profit).ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [CascadingParameter]
    public List<ProfitReportModel> ProfitReport { get; set; }
}