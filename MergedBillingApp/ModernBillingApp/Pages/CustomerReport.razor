@page "/customer-report"
@using Microsoft.AspNetCore.Components.Forms
@inject ReportService reportService
@inject CustomerService customerService

<h3>Customer Sales Report</h3>
<p>Shows all sales within a date range, with filters for customers and payment types.</p>

<div class="card mb-3">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label>From Date</label>
                <InputDate @bind-value="fromDate" class="form-control" />
            </div>
            <div class="col-md-3">
                <label>To Date</label>
                <InputDate @bind-value="toDate" class="form-control" />
            </div>
            <div class="col-md-3">
                <label>Filter by Customer</label>
                <InputSelect @bind-value="filterCustomerId" class="form-select">
                    <option value="0">-- All Customers --</option>
                    @if (customerList != null)
                    {
                        @foreach (var c in customerList)
                        {
                            <option value="@c.Id">@c.CName</option>
                        }
                    }
                </InputSelect>
            </div>
            <div class="col-md-3">
                <label>Filter by Payment Mode</label>
                <InputSelect @bind-value="filterPaymentMode" class="form-select">
                    <option value="">-- All Types --</option>
                    <option value="Cash">Cash</option>
                    <option value="Card">Card</option>
                    <option value="NEFT">NEFT</option>
                    <option value="Credit">Credit</option>
                </InputSelect>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <button class="btn btn-primary" @onclick="LoadReport">Load Report</button>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Date</th>
            <th>Bill #</th>
            <th>Customer Name</th>
            <th>Contact</th>
            <th>Payment Mode</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (filteredBillLog == null)
        {
            <tr><td colspan="6">Loading...</td></tr>
        }
        else if (!filteredBillLog.Any())
        {
            <tr><td colspan="6">No sales data found for these filters.</td></tr>
        }
        else
        {
            @foreach (var bill in filteredBillLog)
            {
                <tr>
                    <td>@bill.BDate.ToShortDateString()</td>
                    <td>@bill.BillNo</td>
                    <td>@bill.CName</td>
                    <td>@bill.CContact</td>
                    <td><span class="badge bg-secondary">@bill.PaymentMode</span></td>
                    <td>@bill.GrandTotal.ToString("0.00")</td>
                </tr>
            }
            <tr class="table-info">
                <td colspan="5" class="text-end fw-bold">Total:</td>
                <td class="fw-bold">@filteredBillLog.Sum(item => item.GrandTotal).ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private DateTime fromDate = DateTime.Today;
    private DateTime toDate = DateTime.Today.AddDays(1).AddTicks(-1); // End of today

    private List<Customer> customerList = new List<Customer>();
    private List<Bill> billLog = new List<Bill>();
    private List<Bill> filteredBillLog = new List<Bill>();

    private int filterCustomerId = 0;
    private string filterPaymentMode = "";

    protected override async Task OnInitializedAsync()
    {
        customerList = await customerService.GetCustomers();
        await LoadReport();
    }

    private async Task LoadReport()
    {
        billLog = await reportService.GetCustomerReport(fromDate, toDate);
        FilterReport();
    }

    // This replaces your old filter logic
    private void FilterReport()
    {
        // Start with the full list
        IEnumerable<Bill> tempFiltered = billLog;

        // Apply customer filter
        if (filterCustomerId > 0)
        {
            tempFiltered = tempFiltered.Where(b => b.CustomerId == filterCustomerId);
        }

        // Apply payment mode filter
        if (!string.IsNullOrEmpty(filterPaymentMode))
        {
            tempFiltered = tempFiltered.Where(b => b.PaymentMode == filterPaymentMode);
        }

        filteredBillLog = tempFiltered.ToList();
    }
}